    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build and Debug",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "Build",
            "program": "${workspaceFolder}/../bin/prerequisite",
            "args": [""],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "linux": {
                "miDebuggerPath": "gdb"
            },
            "windows": {
                "program": "${workspaceFolder}/../bin/prerequisite.exe",
                "miDebuggerPath": "gdb.exe"
            },
            "osx": {
                "MIMode": "lldb",
                "miDebuggerPath": "lldb",
                "setupCommands": [],
            }
        },{
            "name": "Build and Debug json",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "Build",
            "program": "${workspaceFolder}/../bin/prerequisite",
            "args": ["--json"],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "linux": {
                "miDebuggerPath": "gdb"
            },
            "windows": {
                "program": "${workspaceFolder}/../bin/prerequisite.exe",
                "miDebuggerPath": "gdb.exe"
            },
            "osx": {
                "MIMode": "lldb",
                "miDebuggerPath": "lldb",
                "setupCommands": [],
            }
        }
    ]
}